<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.acmhack.ucla.textscramblerskeleton.MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/text_scrambler_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="T3XT SCR4MBL3R"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFF"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Original"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#FFF"
                    android:id="@+id/original" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="test"
                    android:fontFamily="sans-serif"
                    android:textStyle="italic"
                    android:textSize="22sp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#FFF"
                    android:id="@+id/OriginalText" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/reverse_icon"
                    android:id="@+id/ButtonSwap" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Encrypt"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#FFF"
                    android:id="@+id/method" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sdrs"
                    android:fontFamily="sans-serif"
                    android:textStyle="italic"
                    android:textSize="22sp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#FFF"
                    android:id="@+id/changedText" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:layout_marginBottom="-10dp"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:layout_width="300dp"
                android:layout_height="425dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/input_bg"
                android:scaleType="fitXY"
                android:src="@drawable/input_bg"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginTop="50dp"
                android:layout_alignTop="@+id/input_bg"
                android:id="@+id/inputText"
                android:textColor="#3667B8"
                android:hint="Enter input"
                android:layout_centerHorizontal="true"
                android:gravity="top|center_vertical" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginTop="235dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/output"
                android:text="Output" />
        </RelativeLayout>
        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#3667B8"
            android:textAlignment="center"
            android:text="Translate"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:background="#FFF"
            android:id="@+id/ButtonTranslate" />
    </LinearLayout>

    <TextView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:textSize="17sp"
        android:textColor="#3667B8"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="493dp"
        android:layout_marginStart="493dp"
        android:layout_marginBottom="86dp" />
</RelativeLayout>
